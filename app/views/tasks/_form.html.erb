<%= form_for(task) do |f| %>
  <%= f.label :header, t("header") %>
  <%= f.text_field :header %> <br />

  <%= f.label :content, t("content") %>
  <%= f.text_area :content %> <br />

  <%= f.label :priority, t("priority") %>
  <%= f.select :priority, [[t("high"), 2], [t("medium"), 1], [t("low"), 0]] %> <br />

  <%= f.label :status, t("status") %>
  <%= f.select :status, [[t("pending"), 2], [t("processing"), 1], [t("solved"), 0]] %> <br />

  <%= f.label :start_time, t("start_time") %>
  <%= f.datetime_field :start_time %> <br />

  <%= f.label :end_time, t("end_time") %>
  <%= f.datetime_field :end_time %> <br />

  <%= f.submit t("submit") %>
<% end %>