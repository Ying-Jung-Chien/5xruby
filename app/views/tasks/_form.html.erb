<%= form_for(task) do |f| %>
  <%= f.label :header, "Header" %>
  <%= f.text_field :header %> <br />

  <%= f.label :content, "Content" %>
  <%= f.text_area :content %> <br />

  <%= f.label :priority, "Priority" %>
  <%= f.number_field :priority %> <br />

  <%= f.label :status, "Status" %>
  <%= f.number_field :status %> <br />

  <%= f.label :start_time, "Start Time" %>
  <%= f.datetime_field :start_time %> <br />

  <%= f.label :end_time, "End Time" %>
  <%= f.datetime_field :end_time %> <br />

  <%= f.submit %>
<% end %>