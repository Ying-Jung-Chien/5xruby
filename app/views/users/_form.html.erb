<%= form_for(user) do |f| %>
  <div class="m-3">
    <%= f.label :name, t("name"), style: "display: block", class: "form-label" %>
    <%= f.text_field :name, class: "w-1/3 form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
    <div style="color: red">
      <% if user.errors.include?(:name) %>
          <% user.errors.full_messages_for(:name).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="m-3">
    <%= f.label :password, t("password"), style: "display: block", class: "form-label" %>
    <%= f.text_field :password, class: "w-1/3 form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
    <div style="color: red">
      <% if user.errors.include?(:password) %>
          <% user.errors.full_messages_for(:password).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

  <input type="hidden" name="user[position]" value="user" />

  <div class="text-left">
    <%= f.submit t("submit"), class:"m-3 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center" %>
  </div>
<% end %>