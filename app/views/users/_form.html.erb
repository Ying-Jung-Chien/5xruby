<%= form_for(user) do |f| %>
  <%= f.label :name, t("name") %>
  <%= f.text_field :name %> <br />

  <%= f.label :password, t("password") %>
  <%= f.text_field :password %> <br />

  <%= f.label :position, t("position") %>
  <%= f.select :position, [[t("user"), "user"], [t("supervisor"), "supervisor"]] %> <br />

  <%= f.submit t("submit")%>
<% end %>